{
  "extends": [
    "react-app",
    "airbnb"
  ],
  "rules": {
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "function-paren-newline": "off",
    "import/exports-last": "off",
    "import/first": "off",
    "import/newline-after-import": [
      "error",
      {
        "count": 1
      }
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ]
      }
    ],
    "import/prefer-default-export": "off",
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "aspects": [
          "noHref",
          "invalidHref",
          "preferButton"
        ]
      }
    ],
    "max-len": [
      "error",
      120,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "newline-after-var": [
      "error"
    ],
    "no-underscore-dangle": "off",
    "object-curly-newline": [
      "error",
      {
        "consistent": true
      }
    ],
    "react/no-typos": "off"
  }
}
